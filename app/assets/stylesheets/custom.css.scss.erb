@import "bootstrap";

/* mixins, variables, etc. */

$grayMediumLight: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box; 
  -webkit-box-sizing: border-box; 
  box-sizing: border-box;
}
@mixin cell($pad) {
  margin:0px;
  padding:$pad;
}

/* bootstrap fixes */
.dropdown-menu {
  min-width: 0;
}
/* universal */

html {
  overflow-y: scroll;
}

body {
  padding-top: 60px;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
}

.hero-unit .btn-group {
  width: 300px;
  margin-left: auto;
  margin-right: auto;
  margin-top:25px;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
}

h2 {
  font-size: 2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  font-weight: normal;
  color: $grayLight;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}


/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #333333;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: 500;
  line-height: 1;
  &:hover {
    color: #333333;
    text-decoration: none;
  }
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid $grayMediumLight;
  color: $grayLight;
  a {
    color: $gray;
    &:hover { 
      color: $grayDarker;
    }
  }  
  small { 
    float: left; 
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

/* sidebar */

aside {
  section {
    padding: 10px 0;
    border-top: 1px solid $grayLighter;
    &:first-child {
      border: 0;
      padding-top: 0;
    }
    span {
      display: block;
      margin-bottom: 3px;
      line-height: 1;
    }
    h1 {
      font-size: 1.4em;
      text-align: left;
      letter-spacing: -1px;
      margin-bottom: 3px;
    }
  }
}

/* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: auto;
  padding: 10px;
  height: auto;  
  margin-bottom: 15px;
}

select {
  @include box_sizing;
}

#error_explanation {
  color: #f00;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  @extend .control-group;
  @extend .error;
 }

.inline {
  display: inline;
}

/* tables */

table.small td { 
      font-size: 12px;
}
.date {
  white-space: nowrap;
}
td.center {
  text-align: center;
}

.toolbar {
  margin-bottom: 20px;
}

th {
  padding: 4px 10px;
  .asc {
    background-image: url(<%= asset_path 'up_arrow.png' %>);
    background-repeat: no-repeat;
    background-position: right center;
    padding-right:15px;
  }
  .desc {
  background-image: url(<%= asset_path 'down_arrow.png' %>);
  background-repeat: no-repeat;
  background-position: right center;
  padding-right:15px;
  }
}
/* pagination */
.pagination {
  margin:auto;
  font-size:12px;
  li {
    line-height:16px;
  }
}

/* CVI styling */
table.cvi{
  background:white;
  border-radius:0px;
  border-collapse:collapse;
  border: {
    style:solid;
    width:thin;
    color:#333333;
  } 
  @include cell(5px);
  td {
    @extend table.cvi;
  }
  p, address {
    font-size:12px;
    line-height:14px;
  }
  small {
    font-size:10px;
  }
  p,address,small{
    @include cell(0px);
    color:#333333;
    .lead{
      font-size:16px;
      font-weight:bold;
    }
  }
  tr.animal-data {
    font-size:10px;
    line-height:10px;
    @include cell(0px);
  }
}
