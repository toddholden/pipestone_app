<%= form_for(@sale) do |f| %>
    <%= f.hidden_field :person_id %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :buyer_name %>
    <%= select(:sale, :person_id, (options_from_collection_for_select(@people, :id, :name_by_last, @sale.person_id )), :class => 'input-medium span3', :include_blank => "Choose a person" ) %> 
    <p><small>Don't see the person you are looking for? <%= link_to 'Add a new person.', new_person_path %></small></p>
  </div>
  <div class="field">
    <%= f.label :buyer_number %>
    <%= f.text_field :buyer_number %>
  </div>
  <div class="field">
    <%= f.label :sale_date %>
    <%= f.date_select :sale_date %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
