<% provide(:title, 'Sales') %>
<div class="container">
  <h1>Sale</h1>
</div>
<div class="row">
<aside class="span3">
<section>
<h1><%= name %></h1>
<p>
  <b>Buyer number:</b>
  <%= @sale.buyer_number %><br />
  <b>Sale date:</b>
  <%= @sale.sale_date %>
</p>

<%= link_to 'Edit', edit_sale_path(@sale) %> |
<%= link_to 'Back', sales_path %>
</section>
</aside>

<div class="span8">
<%= link_to 'Add animals' %> <!--add path later -->
  <% if @sale.animals.any? %>
    <table class="table table-condensed">
      <tr>
        <th>Date</th>
        <th>Metal1</th>
        <th>Allflex</th>
        <th>Comments</th>
        <th>Remove</th>
      </tr>
      <%= render @animal %>
    </table>
  <% end %>
</div>
</div>

<hr>

<div class="container">
  <h2>Select animals</h2>

<table class="table table-striped">
  <tr>
    <th>Select</th>
    <th>Date</th>
    <th>Metal1</th>
    <th>Allflex</th>
    <th>Comments</th>
  </tr>
<%= form_tag({:controller => "animals", :action => "animal_assignment"}, {:method => 'get'} ) do %>
  <%= hidden_field_tag( :sale_id, @sale.id ) %>
  <% @unsold_animals.each do |animal| %>
    <tr>
      <td><%= check_box_tag 'animals_sold[]', animal.id %></td>
      <td><span class="date"><%= animal.date %></span></td>
      <td><%= animal.metal1 %></td>
      <td><%= animal.allflex %></td>
      <td class="comments"><%= animal.comments %></td>
    </tr>
  <% end %>
  <%= submit_tag %>
<% end %>
</table>
</div>
