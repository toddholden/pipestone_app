<% provide(:title, 'Sales') %>
<p id="notice"><%= notice %></p>
<div class="row">
<aside class="span3">
<section>
<h1><%= name %></h1>
<p>
  <b>Sale date:</b>
  <%= @sale.sale_date %><br />
  <b>Buyer number:</b>
  <%= @sale.buyer_number %>
</p>

<%= link_to 'Edit', edit_sale_path(@sale) %> |
<%= link_to 'Back', sales_path %>
</section>
</aside>

<div class="span8">
<%= link_to 'Add animals' %> <!--add path later -->
  <% if @sale.animals.any? %>
    <table class="table table-condensed">
      <tr>
        <th>Date</th>
        <th>Metal1</th>
        <th>Allflex</th>
        <th>Comments</th>
        <th>Sale</th>
        <th>Options</th>
      </tr>
      <%= render @animal %>
    </table>
  <% end %>
</div>
</div>
