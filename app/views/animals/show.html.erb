<% provide(:title, 'Animals') %>
<h1>Viewing animal <small><%= @animal.metal1 %></small></h1>
<% if @animal.sale_id %>
  <p><strong>Sold to: 
    <%= link_to(@animal.sale) do %>
      <%=@animal.sale.person.firstname + " " + @animal.sale.person.lastname + " (" + @animal.sale.sale_date.to_s + ")" %>
    <% end %>
  </strong></p>
<% end %>
<p>
  <strong>Date:</strong>
  <%= @animal.date %>
</p>
<p>
  <strong>Owner:</strong>
  <% if @animal.person %>
    <%= @animal.person.firstname + " " + @animal.person.lastname %>
  <% end %>
</p>
<p>
  <strong>Breed:</strong>
  <%= @animal.breed %>
</p>
<p>
  <strong>Sex:</strong>
  <%= @animal.sex %>
</p>
<p>
  <strong>Old Tag:</strong>
  <%= @animal.old_tag %>
</p>
<p>
  <strong>Age:</strong>
  <%= @animal.age %>
</p>
<p>
  <strong>Metal:</strong>
  <%= @animal.metal1 %>
</p>
<p>
  <strong>CHV:</strong>
  <%= @animal.chv %>
</p>
<p>
  <strong>Allflex:</strong>
  <%= @animal.allflex %>
</p>
<p>
  <strong>Brucellosis:</strong>
  <%= @animal.bruc %>
</p>
<p>
  <strong>Months Pregnant:</strong>
  <%= @animal.months_pregnant %>
</p>
<p>
  <strong>Temperature:</strong>
  <%= @animal.temperature %>
</p>
<p>
  <strong>Comments:</strong>
  <%= @animal.comments %>
</p>
<div >
  <%= link_to 'Edit', edit_animal_path(@animal), :class => 'btn btn-primary' %>
<% if @animal.metal1.last(4) != "9999" %>
  <%= link_to 'Create next animal', next_url(:id => @animal.id), :class => 'btn' %> 
<% end %>
  <%= link_to 'Animals list', animals_path, :class => 'btn' %>
</div>
