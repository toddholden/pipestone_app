<% provide(:title, 'Animals') %>
<h1>Viewing and entering animals</h1>

<%= link_to 'New Animal', new_animal_path %>
<%= will_paginate %>

<table class="table table-striped">
  <tr>
    <th>Date</th>
    <th>Metal1</th>
    <th>Allflex</th>
    <th>Comments</th>
    <th>Sale</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><span class="date"><%= animal.date %></span></td>
    <td><%= animal.metal1 %></td>
    <td><%= animal.allflex %></td>
    <td class="comments"><%= animal.comments %></td>
    <td><%= animal.sale %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate %>

