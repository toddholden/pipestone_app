<% provide(:title, 'Animals') %>
<h1>Viewing and entering animals</h1>

<%= link_to 'New Animal', new_animal_path %>
<%= will_paginate %>

<table class="table table-striped">
  <tr>
    <th>Date</th>
    <th>Metal1</th>
    <th>Allflex</th>
    <th>Comments</th>
    <th>Sale</th>
    <th>Options</th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><span class="date"><%= animal.date %></span></td>
    <td><%= animal.metal1 %></td>
    <td><%= animal.allflex %></td>
    <td class="comments"><%= animal.comments %></td>
    <td>
      <% if animal.sale_id %>
        <%= link_to animal.sale_id %><!-- Make this line work. Shit. -->
      <% end %>
    </td>
    <td>
      <%= link_to 'Show', animal %> /
      <%= link_to 'Edit', edit_animal_path(animal) %> /
      <%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate %>

