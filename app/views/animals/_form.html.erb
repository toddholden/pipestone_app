<% provide(:title, 'New Animal') %>
<%= form_for(@animal) do |f| %>
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
      <% @animal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
<div class="span5">
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select( "date", :order => [:month, :day, :year] ) %>
    <%= f.label :person_id %>
    <%= select(:animal, :person_id, (options_from_collection_for_select(@people, :id, :name_by_last, @animal.person_id)), :include_blank => "Choose a person" ) %>
    <p><small>Don't see the person you are looking for? <%= link_to 'Add a new person.', new_person_path %></small></p>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
    <%= f.label :sex %>
    <%= f.text_field :sex %>
    <%= f.label :old_tag %>
    <%= f.text_field :old_tag %>
    <%= f.label :age %>
    <%= f.text_field :age %>
    <%= f.label :metal1 %>
    <%= f.text_field :metal1 %>
  </div>
</div>
<div class="span5">
  <div class="field">
    <%= f.label :chv, "CHV" %>
    <%= f.text_field :chv %>
    <%= f.label :allflex %>
    <%= f.text_field :allflex %>
    <%= f.label :bruc, "Brucellosis" %>
    <%= f.text_field :bruc %>
    <%= f.label :months_pregnant %>
    <%= f.text_field :months_pregnant %>
    <%= f.label :temperature %>
    <%= f.text_field :temperature %>
    <%= f.label :comments %>
    <%= f.text_area :comments, :rows => "5" %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', animals_path, :class => 'btn' %>
  </div>
</div>
</div>
<% end %>
