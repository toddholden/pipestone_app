<% provide(:title, @person.firstname + " " +  @person.lastname) %>
<div class="row">
<aside class="span4">
<section>
<address>
  <h1><%= @person.firstname + " " +  @person.lastname %></h1>
  <%= @person.address %><br />
  <%= @person.city %>, <%= @person.state %> <%= @person.zipcode %>
</address>
  <div class="btn-group">
  <%= link_to 'New sale', new_sale_path(:person_id => @person.id), :class => 'btn btn-primary' %>
  <%= link_to 'Edit this person', edit_person_path(@person), :class => 'btn' %> 
  </div>
</section>
</aside>

  <div class="span8">
    <% if @person.sales.any? %>
      <table class="table table-striped table-condensed small">
        <tr>
          <th>Sale date</th>
          <th>Buyer number</th>
          <th class="center">Options</th>
        </tr>
        <%= render @sales %>
     </table>
      <%= will_paginate @sales %>
    <% else %>
      <p>No sales associated with this person.</p>
    <% end %>
  </div>
</div>
